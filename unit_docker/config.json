{
    "listeners": {
        "*:8000": {
                "pass": "routes"
        }
    },

    "routes": [
        {
            "match": {
                "uri": "/static/*"
            },
            "action": {
                "share": "/www/$uri"
            }
        },
        {
            "action": {
               "pass": "applications/myshop"
            }
            
        }
    ],

    "applications": {
        "myshop": {
                "type": "python 3",
                "path": "/www/",
                "module": "myshop.wsgi"
        }
    }
}